<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.abdelrahman.rafaat.movies.ui.home.view.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.abdelrahman.rafaat.movies.ui.search.view.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.abdelrahman.rafaat.movies.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.abdelrahman.rafaat.movies.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_genreDetails"
        android:name="com.abdelrahman.rafaat.movies.ui.genreDetails.view.GenreDetailsFragment"
        android:label="@string/title_genre"
        tools:layout="@layout/fragment_category_details" />

    <fragment
        android:id="@+id/navigation_categoryDetails"
        android:name="com.abdelrahman.rafaat.movies.ui.categoryDetails.view.CategoryDetailsFragment"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_category_details" />

    <fragment
        android:id="@+id/navigation_movieDetails"
        android:name="com.abdelrahman.rafaat.movies.ui.moviedetails.MovieDetailsFragment"
        android:label="@string/title_movieDetails"
        tools:layout="@layout/fragment_movie_details" />
</navigation>